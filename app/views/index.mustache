<div class="mdl-grid demo-content">
	<div class="mdl-cell mdl-cell--4-col">
		<div class="sport-card sport-card-basketball mdl-card mdl-shadow--2dp">
		  <div class="mdl-card__title">
			<h2 class="mdl-card__title-text">Futebol</h2>
		  </div>
		  <div class="mdl-card__supporting-text">				
			<label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-sport-court">
				<span class="mdl-switch__label">Iluminação ligada</span>
				<input type="checkbox" id="switch-sport-court" class="mdl-switch__input" checked>
			</label>
		  </div>
		  <div class="mdl-card__actions mdl-card--border">
			<a id="sport-card-dialog-open" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
			  Alterar jogo
			</a>
		  </div>  
		</div>
	</div>
</div>

<dialog id="sport-card-dialog" class="mdl-dialog" style="width:380px">
    <h4 class="mdl-dialog__title">Escolha o jogo</h4>
    <div class="mdl-dialog__content">
      <div class="mdl-grid demo-content">
		<div class="mdl-cell mdl-cell--12-col">
			<ul class="demo-list-control mdl-list">
			  <li class="mdl-list__item">
			    <span class="mdl-list__item-primary-content">
			      <img alt="" src="/img/bascketball_128.png" style="width:48px; heitgh:48px;"></img>&nbsp
			      Basquete
			    </span>
			    <span class="mdl-list__item-secondary-action">
			      <label class="demo-list-radio mdl-radio mdl-js-radio mdl-js-ripple-effect" for="list-checkbox-1">
			        <input type="radio" name="sportchoosing" class="mdl-radio__button" value="0" />
			      </label>
			    </span>
			  </li>
			  <li class="mdl-list__item">
			    <span class="mdl-list__item-primary-content">
			      <img alt="" src="/img/soccer_128.png" style="width:48px; heitgh:48px;"></img>&nbsp
			      Futebol
			    </span>
			    <span class="mdl-list__item-secondary-action">
			      <label class="demo-list-radio mdl-radio mdl-js-radio mdl-js-ripple-effect" for="list-checkbox-1">
			        <input type="radio" name="sportchoosing" class="mdl-radio__button" value="1" checked />
			      </label>
			    </span>
			  </li>
			  <li class="mdl-list__item">
			    <span class="mdl-list__item-primary-content">
			      <img alt="" src="/img/tennis_128.png" style="width:48px; heitgh:48px;"></img>&nbsp
			      Tênis
			    </span>
			    <span class="mdl-list__item-secondary-action">
			      <label class="demo-list-radio mdl-radio mdl-js-radio mdl-js-ripple-effect" for="list-checkbox-1">
			        <input type="radio" name="sportchoosing" class="mdl-radio__button" value="2" />
			      </label>
			    </span>
			  </li>
			  <li class="mdl-list__item">
			    <span class="mdl-list__item-primary-content">
			      <img alt="" src="/img/volleyball_128.png" style="width:48px; heitgh:48px;"></img>&nbsp
			      Vôlei
			    </span>
			    <span class="mdl-list__item-secondary-action">
			      <label class="demo-list-radio mdl-radio mdl-js-radio mdl-js-ripple-effect" for="list-checkbox-1">
			        <input type="radio" name="sportchoosing" class="mdl-radio__button" value="3"/>
			      </label>
			    </span>
			  </li>
  			</ul>
		</div>
	  </div>
    </div>
    <div class="mdl-dialog__actions">
      <button type="button" class="mdl-button">Confirmar</button>
      <button id="sport-card-dialog-close" type="button" class="mdl-button close">Fechar</button>
    </div>
</dialog>